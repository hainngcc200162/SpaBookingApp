@page
@model SpaBookingApp.Pages.Products.CreateProductModel
@{
    Layout = "_LayoutWithUsername";
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<form method="post" id="createProductForm" class="form-container" enctype="multipart/form-data">
    <div class="form-group">
        <label for="SpaProduct_Name" title="Product Name">Product Name:</label>
        <input type="text" id="SpaProduct_Name" name="SpaProduct.Name" class="form-control" placeholder="Enter product name" />
        <span class="text-danger" id="SpaProduct_Name_Error"></span>
    </div>
    
    <div class="form-group">
        <label for="SpaProduct_Price" title="Product Price">Product Price:</label>
        <input type="number" id="SpaProduct_Price" name="SpaProduct.Price" class="form-control" step="0.01" placeholder="Enter product price" />
        <span class="text-danger" id="SpaProduct_Price_Error"></span>
    </div>
    
    <div class="form-group">
        <label for="SpaProduct_QuantityInStock" title="Quantity In Stock">Quantity In Stock:</label>
        <input type="number" id="SpaProduct_QuantityInStock" name="SpaProduct.QuantityInStock" class="form-control" placeholder="Enter quantity in stock" />
        <span class="text-danger" id="SpaProduct_QuantityInStock_Error"></span>
    </div>
    
    <div class="form-group">
        <label for="SpaProduct_Description" title="Description">Description:</label>
        <textarea id="SpaProduct_Description" name="SpaProduct.Description" class="form-control" placeholder="Enter Description"></textarea>
        <span class="text-danger" id="SpaProduct_Description_Error"></span>
    </div>
    
    <div class="form-group">
        <label for="SpaProduct_CategoryId" title="Category">Category:</label>
        <select id="SpaProduct_CategoryId" name="SpaProduct.CategoryId" class="form-control">
            <option value="">-- Select Category --</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span class="text-danger" id="SpaProduct_CategoryId_Error"></span>
    </div>
    
    <div class="form-group">
        <label for="imageInput" title="Product Poster">Product Poster:</label>
        <input type="file" id="imageInput" name="imageInput" class="form-control" accept="image/*" style="display:none" />
        <input type="text" id="imageFileName" readonly class="form-control" placeholder="Select an image" />
        <button type="button" class="button secondary-button" onclick="selectImage()">Browse</button>
        <img id="previewImage" src="#" alt="Preview" style="display:none" />
        <span id="selectedImageName"></span>
        <span class="text-danger" id="imageInput_Error"></span>
    </div>
    
    <div class="form-group">
        <button type="submit" class="button primary-button">Create</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
    <a href="/SpaProducts" class="button secondary-button">Back to Spa Products</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}

<script src="~/js/Product/createProduct.js"></script>
<script src="~/js/Image/createimage.js"></script>
