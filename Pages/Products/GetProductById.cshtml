@page
@model SpaBookingApp.Pages.Products.GetProductByIdModel

@inject HttpClient HttpClient
@{
    ViewData["Title"] = "Get Product by ID";
}
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
<h1>Get Product by ID</h1>

@if (Model.Product != null)
{
    <h2>Product Details</h2>
    <div class="product-details">
        <div class="product-image">
            @if (!string.IsNullOrEmpty(Model.Product.PosterName))
            {
                <img src="@Model.Product.PosterName" alt="Product Poster" />
            }
        </div>
        <div class="product-info">
            <p><strong>ID:</strong> @Model.Product.Id</p>
            <p><strong>Name:</strong> @Model.Product.Name</p>
            <p><strong>Price:</strong> @Model.Product.Price.ToString("C")</p>
            <p><strong>Quantity In Stock:</strong> @Model.Product.QuantityInStock</p>
            <p><strong>Category:</strong> @Model.Product.CategoryName</p>
        </div>
    </div>
    
    <a href="/Products/Index" class="button secondary-button">Back to Products</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}
<script src="~/js/api.js"></script>


