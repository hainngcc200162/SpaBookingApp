            <th>Name</th>
            <th>Price</th>
            <th>Quantity In Stock</th>
            <th>Category</th>
        </tr>
        <tr>
            <td>@Model.Product.Id</td>
            <td>@Model.Product.Name</td>
            <td>@Model.Product.Price.ToString("C")</td>
            <td>@Model.Product.QuantityInStock</td>
            <td>@Model.Product.CategoryName</td>
        </tr>
    </table>
    <a href="/Products/Index" class="button secondary-button">Back to Products</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
