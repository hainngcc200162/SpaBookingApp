@page
@model SpaBookingApp.Pages.Categories.CreateCategoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Create Category";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Categories /</span> Create Category
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add new category</h5>
                <small class="text-muted float-end">Add label</small>
            </div>
            <div class="card-body">

                <form method="post" id="createCategoryForm">
                    <div class="mb-3">
                        <label for="Category_Name" title="Category Name">Category Name:</label>
                        <input type="text" id="Category_Name" name="Category_Name" class="form-control"
                            placeholder="Enter category name" required/>
                        <span class="text-danger" id="Category_Name_Error"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/Categories/Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}
<script src="~/js/Category/createCategory.js"></script>
