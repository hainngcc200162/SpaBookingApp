@page
@model SpaBookingApp.Pages.Categories.DeleteCategoryModel
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Delete Category";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Categories /</span> Delete Category
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Delete Category</h5>
                <small class="text-muted float-end">Delete label</small>
            </div>
            <div class="card-body">
                <form method="post" id="deleteCategoryForm">
                    <div class="product-info">
                        <h3>Are you sure you want to delete the following Category?</h3>

                        <input type="hidden" asp-for="Category.Id" id="Category_Id" />

                        <div class="mb-3">
                            <label asp-for="Category.Name" title="Category Name"><strong>Category Name:</strong></label>
                            <span>@Model.Category.Name</span>
                        </div>

                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <a href="/Categories/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}


<script src="~/js/Category/deleteCategory.js"></script>