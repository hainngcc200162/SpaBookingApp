@page
@model SpaBookingApp.Pages.Staffs.GetStaffByIdModel

@{
    ViewData["Title"] = "Get Staff by ID";
    Layout = "_LayoutWithUsername";
}

<h1>Get Staff by ID</h1>

@if (Model.Staff != null)
{
    <h2>Staff Details</h2>
    <div class="staff-detail">
        <div class="staff-detail-image"> 
            @if (!string.IsNullOrEmpty(Model.Staff.PosterName))
            {
                <img src="@Model.Staff.PosterName" alt="Staff Poster" />
            }
        </div>
        <div class="staff-info">
            <p><strong>ID:</strong> @Model.Staff.Id</p>
            <p><strong>Name:</strong> @Model.Staff.Name</p>
            <p><strong>Gender:</strong> @Model.Staff.Gender</p>
            <p><strong>Email:</strong> @Model.Staff.Email</p>
            <p><strong>Description:</strong> @Model.Staff.Description</p>
        </div>
    </div>

    <a href="/Staffs/Index" class="button secondary-button">Back to Staffs</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}
