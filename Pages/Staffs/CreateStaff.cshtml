@page
@model SpaBookingApp.Pages.Staffs.CreateStaffModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Staff";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Staffs /</span> Create Staff
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add new staff</h5>
                <small class="text-muted float-end">Add label</small>
            </div>
            <div class="card-body">
                <form method="post" id="createStaffForm" class="form-container" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="Staff_Name" title="Staff Name">Staff Name:</label>
                        <input type="text" id="Staff_Name" name="Staff.Name" class="form-control"
                            placeholder="Enter staff name" required>
                        <span class="text-danger" id="Staff_Name_Error"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Staff_Gender" title="Staff Gender">Gender:</label>
                        <select id="Staff_Gender" name="Staff.Gender" class="form-select color-dropdown" required>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span class="text-danger" id="Staff_Gender_Error"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Staff_Email" title="Staff Email">Email:</label>
                        <input type="email" id="Staff_Email" name="Staff.Email" class="form-control"
                            placeholder="Enter staff email" required/>
                        <span class="text-danger" id="Staff_Email_Error"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Staff_Description" title="Description">Description:</label>
                        <textarea id="Staff_Description" name="Staff.Description" class="form-control"
                            placeholder="Enter Description" required></textarea>
                        <span class="text-danger" id="Staff_Description_Error"></span>
                    </div>

                    <div class="mb-3">
                        <label for="imageInput" title="Staff Poster">Staff Poster:</label>
                        <input type="file" id="imageInput" name="imageInput" class="form-control" accept="image/*"
                            style="display:none" required/>
                        <input type="text" id="imageFileName" readonly class="form-control"
                            placeholder="Select an image" required/>
                        <button type="button" class="btn rounded-pill btn-outline-primary" onclick="selectImage()">Browse</button>
                        <img id="previewImage" src="#" alt="Preview" style="display:none" />
                        <span id="selectedImageName"></span>
                        <span class="text-danger" id="imageInput_Error"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/Staffs/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
    <a href="/Staff/Index" class="button secondary-button">Back to Staff List</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}

<script src="~/js/Staff/createStaff.js"></script>
<script src="~/js/Image/createimage.js"></script>
