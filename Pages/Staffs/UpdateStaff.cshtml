@page
@model SpaBookingApp.Pages.Staffs.UpdateStaffModel

@{
    ViewData["Title"] = "Update Staff";
    Layout = "_AdminLayout";
}


@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p class="error-message">@Model.ErrorMessage</p>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p class="success-message">@Model.SuccessMessage</p>
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Staffs /</span> Update Staff
    </h4>
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Udpate staff</h5>
                <small class="text-muted float-end">Update label</small>
            </div>
            <div class="card-body">
                <form method="post" id="updateStaffForm" class="form-container" enctype="multipart/form-data">

                    <input type="hidden" asp-for="Staff.Id" />

                    <div class="mb-3">
                        <label><strong>Name:</strong></label>
                        <input type="text" asp-for="Staff.Name" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label><strong>Description:</strong></label>
                        <textarea asp-for="Staff.Description" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label><strong>Gender:</strong></label>
                        <select asp-for="Staff.Gender" class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label><strong>Email:</strong></label>
                        <input type="email" asp-for="Staff.Email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label><strong>Poster:</strong></label>
                        <div>
                            @if (!string.IsNullOrEmpty(Model.Staff.PosterName))
                            {
                                
                                <img src="@Model.Staff.PosterName" alt="Poster" class="poster-image1"
                                    style="max-height: 350px;" id="currentImage" /> 
                                    <br><br>
                            }
                            <input type="file" asp-for="Staff.Poster" class="btn rounded-pill btn-outline-primary"
                                onchange="displayPreviewImage(event)" accept="image/*" />
                            <input type="hidden" asp-for="Staff.PosterName" />
                            <img id="previewImage" alt="Preview" style="display: none; max-height: 200px;" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="/Staffs/Index" class="btn btn-secondary">Back to Spa Products</a>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Staff/updateStaff.js"></script>
<script src="~/js/Image/updateimage.js"></script>
