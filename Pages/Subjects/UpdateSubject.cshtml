@page
@model SpaBookingApp.Pages.Subjects.UpdateSubjectModel
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Update Subject";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Subjects /</span> Update Subject
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Udpate Subject</h5>
                <small class="text-muted float-end">Update label</small>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Subject.Id" title="Subject ID"><strong>Subject ID:</strong></label>
                        <span>@Model.Subject.Id</span>
                        <input type="hidden" asp-for="Subject.Id" id="Subject_Id" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Subject.Name" title="Subject Name"><strong>Subject Name:</strong></label>
                        <input asp-for="Subject.Name" class="form-control" placeholder="Enter subject name"
                            id="Subject_Name" required/>
                        <span asp-validation-for="Subject.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a href="/Subjects/Index" class="btn btn-secondary">Back to Categories</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
    <a href="/Subjects/Index" class="button secondary-button">Back to Subjects</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}
<script src="~/js/Subject/updateSubject.js"></script>
