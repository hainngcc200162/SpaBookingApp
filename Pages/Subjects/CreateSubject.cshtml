@page
@model SpaBookingApp.Pages.Subjects.CreateSubjectModel
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Create Subject";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Subjects /</span> Create Subject
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add new subject</h5>
                <small class="text-muted float-end">Add label</small>
            </div>
            <div class="card-body">
                <form method="post" id="createSubjectForm">
                    <div class="mb-3">
                        <label for="Subject_Name" title="Subject Name">Subject Name:</label>
                        <input type="text" id="Subject_Name" name="Subject_Name" class="form-control"
                            placeholder="Enter subject name" required/>
                        <span class="text-danger" id="Subject_Name_Error"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/Subjects/Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
    <a href="/Subjects/Index" class="button secondary-button">Back to Subjects</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}
<script src="~/js/Subject/createSubject.js"></script>
