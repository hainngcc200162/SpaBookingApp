@page
@model SpaBookingApp.Pages.Subjects.CreateSubjectModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_LayoutWithUsername"; }
@{
    ViewData["Title"] = "Create Subject";
}
<h1>Create Subject</h1>

<form method="post" id="createSubjectForm" class="form-container">
    <div class="form-group">
        <label for="Subject_Name" title="Subject Name">Subject Name:</label>
        <input type="text" id="Subject_Name" name="Subject_Name" class="form-control" placeholder="Enter subject name" />
        <span class="text-danger" id="Subject_Name_Error"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="button primary-button">Create</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
    <a href="/Subjects/Index" class="button secondary-button">Back to Subjects</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}
<script src="~/js/Subject/createSubject.js"></script>
