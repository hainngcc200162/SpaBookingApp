@page
@model SpaBookingApp.Pages.Subjects.DeleteSubjectModel

@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Delete Subject";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Subjects /</span> Delete Subject
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Delete Subject</h5>
                <small class="text-muted float-end">Delete label</small>
            </div>
            <div class="card-body">

                <form method="post" id="deleteSubjectForm">
                    <div class="product-info">
                        <h3>Are you sure you want to delete the following Subject?</h3>

                        <input type="hidden" asp-for="Subject.Id" id="Subject_Id" />

                        <div class="mb-3">
                            <label asp-for="Subject.Name" title="Subject Name"><strong>Subject Name:</strong></label>
                            <span>@Model.Subject.Name</span>
                        </div>

                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <a href="/Subjects/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}


<script src="~/js/Subject/deleteSubject.js"></script>
