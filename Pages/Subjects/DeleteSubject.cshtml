@page
@model SpaBookingApp.Pages.Subjects.DeleteSubjectModel

@{ Layout = "_LayoutWithUsername"; }
@{
    ViewData["Title"] = "Delete Subject";
}
<h1>Delete Subject</h1>

<form method="post" id="deleteSubjectForm">
    <div class="product-info">
        <h3>Are you sure you want to delete the following Subject?</h3>

        <input type="hidden" asp-for="Subject.Id" id="Subject_Id" />

        <div>
            <label asp-for="Subject.Name" title="Subject Name">Subject Name:</label>
            <span>@Model.Subject.Name</span>
        </div>

        <button type="submit" class="button primary-button">Confirm Delete</button>
        <a href="/Subjects/Index" class="button secondary-button">Cancel</a>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}


<script src="~/js/Subject/deleteSubject.js"></script>
