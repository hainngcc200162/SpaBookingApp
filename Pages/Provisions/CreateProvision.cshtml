@page
@model SpaBookingApp.Pages.Provisions.CreateProvisionModel
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Create Provision";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Provisions /</span> Create Provision
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add new provision</h5>
                <small class="text-muted float-end">Add label</small>
            </div>
            <div class="card-body">
                <form method="post" id="createProvisionForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="Provision.Name" title="Provision Name">Provision Name:</label>
                        <input asp-for="Provision.Name" class="form-control" placeholder="Enter provision name" />
                        <span asp-validation-for="Provision.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Provision.Price" title="Provision Price">Provision Price:</label>
                        <input asp-for="Provision.Price" class="form-control" step="0.01"
                            placeholder="Enter provision price" />
                        <span asp-validation-for="Provision.Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Provision.DurationMinutes" title="Provision Duration">Provision Duration
                            (minutes):</label>
                        <input asp-for="Provision.DurationMinutes" class="form-control"
                            placeholder="Enter provision duration" />
                        <span asp-validation-for="Provision.DurationMinutes" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Provision.NumberOfExecutions" title="Number Of Executions">Number Of Executions:</label>
                        <input asp-for="Provision.NumberOfExecutions" class="form-control"
                            placeholder="Enter Number Of Executions" />
                        <span asp-validation-for="Provision.NumberOfExecutions" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Provision.Description" title="Description">Description:</label>
                        <input asp-for="Provision.Description" class="form-control" placeholder="Enter Description" />
                        <span asp-validation-for="Provision.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Provision.Status" title="Status">Status:</label>
                        <select class="form-select color-dropdown" asp-for="Provision.Status">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <span asp-validation-for="Provision.Status" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Provision.Poster" title="Provision Poster">Provision Poster:</label>
                        <input type="file" asp-for="Provision.Poster" class="form-control" accept="image/*"
                            id="imageInput" style="display:none" />
                        <input type="text" id="imageFileName" readonly class="form-control"
                            placeholder="Select an image" />
                            <br>
                        <button type="button" class="btn rounded-pill btn-outline-primary" onclick="selectImage()">Browse</button>
                        <img id="previewImage" src="#" alt="Preview" style="display:none" />
                        <span id="selectedImageName"></span>
                        <span asp-validation-for="Provision.Poster" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                         <a href="/Provisions/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
    <a href="/Provisions/Index" class="button secondary-button">Back to Provisions</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}


<script src="~/js/Provision/createProvision.js"></script>
<script src="~/js/Image/createimage.js"></script>
