	<script>
		// JavaScript code to add active-menu class to the current menu item
		// Get the current URL path
		var currentPath = window.location.pathname;

		// Get all the menu items
		var menuItems = document.getElementsByClassName("menu-item");

		// Loop through the menu items to find the matching one and add the active-menu class
		for (var i = 0; i < menuItems.length; i++) {
			var menuItem = menuItems[i];
			var link = menuItem.querySelector("a").getAttribute("href");

			// Check if the currentPath matches the link's href
			if (currentPath === link) {
				menuItem.classList.add("active-menu");
				break; // If found a match, no need to continue the loop
			}
		}
	</script>
	<script>
		function performLogout() {
			sessionStorage.removeItem("email");
			sessionStorage.removeItem("token");
			sessionStorage.clear();

			window.location.href = "/UserManagement/Login";
		}
		function isUserLoggedIn() {
			var email = sessionStorage.getItem("email");
			return email !== null && email !== "";
		}

		function getCurrentPage() {
			var currentUrl = window.location.href;
			if (currentUrl.includes("/UserManagement/Register")) {
				return "Register";
			} else if (currentUrl.includes("/UserManagement/Login")) {
				return "Login";
			} else {
				return "Home";
			}
		}

		document.addEventListener("DOMContentLoaded", function () {
			var greetingElement = document.getElementById("greetingElement");
			var loginLink = document.getElementById("loginLink");
			var registerLink = document.getElementById("registerLink");
			var logoutLink = document.getElementById("logoutLink");

			if (greetingElement && loginLink && registerLink && logoutLink) {
				var email = sessionStorage.getItem("email") || "";
				if (isUserLoggedIn() && getCurrentPage() !== "Login") {
					var greetingText = document.createElement("a");
					greetingText.textContent = "Hello " + email;

					if (email === "admin@gmail.com") {
						greetingText.href = "/Admin/Index"; 
					} else {
						greetingText.href = "/UserManagement/Profile"; 
					}
					greetingText.style.color = "black";
					greetingText.style.fontSize = "14px";


					greetingElement.innerHTML = ''; 
					greetingElement.appendChild(greetingText); 
					document.body.classList.add("user-logged-in");
					loginLink.style.display = "none";
					registerLink.style.display = "none";
					logoutLink.style.display = "inline-block";
				} else {
					loginLink.style.display = "inline-block";
					registerLink.style.display = "inline-block";
					logoutLink.style.display = "none";
				}
			}
		});

	</script>
	<script>
		const subscribeButton = document.getElementById('subscribeButton');

		subscribeButton.addEventListener('click', (event) => {
			event.preventDefault(); // Prevent form submission

			// Get the email input value
			const emailInput = document.querySelector('input[name="email"]');
			const email = emailInput.value;

			// Define the subscribe endpoint
			const subscribeEndpoint = '/Home/Contact'; // Replace with your actual subscribe endpoint

			// Create the complete URL
			const completeUrl = `${window.location.origin}${subscribeEndpoint}`;

			// Navigate to the complete URL with the email parameter
			window.location.href = `${completeUrl}?email=${email}`;
		});
	</script>

	<script>
		async function fetchCart() {
			try {
				const response = await fetch('/api/Cart');
				if (response.ok) {
					const cartData = await response.json();
					console.log(cartData);
					updateCartView(cartData);
				} else {
					console.error('Failed to fetch cart data.');
				}
			} catch (error) {
				console.error('An error occurred while fetching cart data:', error);
			}
		}

		function updateCartView(cartData) {
			const cartItemsElement = document.getElementById('cart-items');
			const cartTotalElement = document.getElementById('cart-total');

			if (cartData && cartData.cartItems && cartData.cartItems.length > 0) {
				const cartItemsContent = cartData.cartItems.map(item => `
					<li class="header-cart-item flex-w flex-t m-b-12">
						<div class="header-cart-item-img">
							<img src="${item.spaProduct.posterName}" alt="IMG">
						</div>

						<div class="header-cart-item-txt p-t-8">
							<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
								${item.spaProduct.name}
							</a>

							<span class="header-cart-item-info">
								${item.quantity} x $${item.spaProduct.price ? item.spaProduct.price.toFixed(2) : 'N/A'}
							</span>
						</div>
					</li>
				`).join('');

				const cartTotalContent = cartData.subTotal !== undefined
					? `Total: $${cartData.subTotal.toFixed(2)}`
					: 'Total: N/A';

				cartItemsElement.innerHTML = cartItemsContent;
				cartTotalElement.textContent = cartTotalContent;
			} else {
				cartItemsElement.innerHTML = '<p>Your cart is empty.</p>';
				cartTotalElement.textContent = '';
			}
		}
		function handleCartClick() {
			fetchCart(); 
		}
