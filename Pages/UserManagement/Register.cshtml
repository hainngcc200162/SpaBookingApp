@page
@model SpaBookingApp.Pages.UserManagement.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<form id="registerForm" method="post">
    <div class="form-group">
        <label asp-for="UserRegisterDto.FirstName"></label>
        <input asp-for="UserRegisterDto.FirstName" class="form-control" />
        <span asp-validation-for="UserRegisterDto.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserRegisterDto.LastName"></label>
        <input asp-for="UserRegisterDto.LastName" class="form-control" />
        <span asp-validation-for="UserRegisterDto.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserRegisterDto.Email"></label>
        <input asp-for="UserRegisterDto.Email" class="form-control" />
        <span asp-validation-for="UserRegisterDto.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserRegisterDto.PhoneNumber"></label>
        <input asp-for="UserRegisterDto.PhoneNumber" class="form-control" />
        <span asp-validation-for="UserRegisterDto.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserRegisterDto.Password"></label>
        <input asp-for="UserRegisterDto.Password" type="password" class="form-control" />
        <span asp-validation-for="UserRegisterDto.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserRegisterDto.ConfirmPassword"></label>
        <input asp-for="UserRegisterDto.ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="UserRegisterDto.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
