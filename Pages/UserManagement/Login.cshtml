@page
@{
    Layout = "_MyLayout";
}
<section class="vh-100 p-t-120 p-b-40">
    <div class="container py-5 h-100">
        <section>
            <h2 class="text-center mb-2 pb-2 text-body fw-bold"><strong>Welcome to a relaxing and beautifying experience
                    at our spa!</strong></h2>
            <p class="text-center mb-4" style="font-size: 20px">
                Here, we are committed to bringing you maximum relaxation and enjoyment. Join us to explore treatments
                and services at the spa so you can enjoy the most wonderful moments of relaxation and beauty. The only
                thing you need to do is register and start your relaxation journey. We look forward to serving you!
            </p>
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5">

                            <h3 class="mb-4 text-center">Sign in</h3>

                            <div id="loginAlert" class="alert" role="alert" style="display: none;"></div>

                            <form id="loginForm">
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="email"><strong>Email:</strong></label>
                                    <input type="email" class="form-control form-control-lg" id="email" name="Email"
                                        required style="font-size: 16px;">
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="password"><strong>Password:</strong></label>
                                    <input type="password" class="form-control form-control-lg" id="password"
                                        name="Password" required style="font-size: 16px;">
                                </div>
                                <button type="submit" class="btn btn-dark btn-lg btn-block">Login</button>
                            </form>
                            <div class="mt-3" style="text-align: right;">
                                <a href="/UserManagement/ResetPassword"  class="text-decoration-none">Forgot
                                    password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
@section Scripts {
    <script src="~/js/User/login.js"></script>
}
