@page
@{
    Layout = "_MyLayout1";
}

<div class="col-12 col-md-8 col-lg-6 col-xl-5">
    <div class="card shadow-2-strong" style="border-radius: 1rem;">
        <div class="card-body p-5">

            <h3 class="mb-4 text-center">Update Profile</h3>
            <div id="passwordModal" class="modal">
                <div class="modal-content">
                    <span class="close" id="closeModal">&times;</span>
                    <div class="modal-body">
                        <label for="password">Password:</label>
                        <input type="password" id="passwordInput" />
                        <button id="passwordSubmit">Submit</button>
                    </div>
                </div>
            </div>
            <form id="updateProfileForm">
                                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" class="form-control" required
                        maxlength="100" disabled>
                </div>
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" class="form-control"
                        required maxlength="100">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" class="form-control"
                        required maxlength="100">
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number:</label>
                    <input type="text" id="phoneNumber" class="form-control"
                        maxlength="20">
                </div>
            <button class="btn btn-dark btn-lg btn-block" id="updateProfileButton">Update Profile</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/User/updateProfile.js"></script>
}
