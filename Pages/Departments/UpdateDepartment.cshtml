@page
@model SpaBookingApp.Pages.Departments.UpdateDepartmentModel
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Update Department";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Departments /</span> Update Department
    </h4>

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Udpate department</h5>
                <small class="text-muted float-end">Update label</small>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Department.Id" title="Department ID"><strong>Department ID:</strong></label>
                        <span>@Model.Department.Id</span>
                        <input type="hidden" asp-for="Department.Id" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Department.Name" title="Department Name"><strong>Department Name:</strong></label>
                        <input asp-for="Department.Name" class="form-control" placeholder="Enter department name" required/>
                        <span asp-validation-for="Department.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Department.OpeningHours" title="Department Opening Hours"><strong>Opening Hours:</strong></label>
                        <input asp-for="Department.OpeningHours" class="form-control"
                            placeholder="Enter opening hours" required/>
                        <span asp-validation-for="Department.OpeningHours" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Department.Description" title="Department Description"><strong>Description:</strong></label>
                        <input asp-for="Department.Description" class="form-control" placeholder="Enter description" required/>
                        <span asp-validation-for="Department.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a href="/Departments/Index" class="btn btn-secondary">Back to Departments</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p>@Model.SuccessMessage</p>
    <a href="/Departments/Index" class="button secondary-button">Back to Departments</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}

@if (!ModelState.IsValid)
{
    <p>Please fix the errors in the form.</p>
}
<script src="~/js/Department/updateDepartment.js"></script>
