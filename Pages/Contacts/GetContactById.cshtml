@page
@model SpaBookingApp.Pages.Contacts.GetContactByIdModel
@{
    Layout = "_LayoutWithUsername";
}
@inject HttpClient HttpClient
@{
    ViewData["Title"] = "Get Contact by ID";
}

<h1>Get Contact by ID</h1>

@if (Model.Contact != null)
{
    <h2>Contact Details</h2>
    <div class="contact-detail">
        <p><strong>ID:</strong> @Model.Contact.Id</p>
        <p><strong>Name:</strong> @Model.Contact.Name</p>
        <p><strong>Email:</strong> @Model.Contact.Email</p>
        <p><strong>Phone:</strong> @Model.Contact.Phone</p>
        <p><strong>Subject:</strong> @Model.Contact.SubjectName</p>
        <p><strong>Message:</strong> @Model.Contact.Message</p>
    </div>

    <a href="/Contacts/Index" class="button secondary-button">Back to Contacts</a>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}
