        <div class="row isotope-grid">
            @* <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item
            women"></div> *@
            @foreach (var product in Model.SpaProducts)
            {
                string filterCategory = "category-" +
                String.Concat(product.CategoryName.Where(c =>
                !Char.IsWhiteSpace(c)));
                <div
                    class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item @product.CategoryName">
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            @if (!string.IsNullOrEmpty(product.PosterName))
                            {
                                <img src="@product.PosterName" alt="Poster"
                                    class="img-fluid">
                            }
                            else
                            {
                                <span class="no-poster">No poster available</span>
                            }
                            <a href="~/Home/Detail?id=@product.Id"
                                class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                Quick View
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l">
                                <a href="~/Home/Detail?id=@product.Id"
                                    class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @product.Name
                                </a>
                                <span class="stext-105 cl3">
                                    @product.Price.ToString("C")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="flex-c-m flex-w w-full p-t-45">
            <div class="pagination">
                @if (Model.PageInformation.PageIndex > 0)
                {
                    <a
                        href="~/Home/Index?pageIndex=0&search=@Model.Search&category=@Model.Category&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">First</a>
                    <a
                        href="~/Home/Index?pageIndex=@(Model.PageInformation.PageIndex - 1)&search=@Model.Search&category=@Model.Category&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">Previous</a>
                }
                @for (int i = 0; i < Model.PageInformation.TotalPages; i++)
                {
                    int displayedPageIndex = i + 1;
                    string activeClass = i == Model.PageInformation.PageIndex ?
                    "active"
                    : ""; // Thêm lớp "active" cho trang hiện tại
                    <a class="@activeClass"
                        href="~/Home/Index?pageIndex=@i&search=@Model.Search&category=@Model.Category&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">@displayedPageIndex</a>
                }
                @if (Model.PageInformation.PageIndex <
                Model.PageInformation.TotalPages - 1)
                {
                    <a
                        href="~/Home/Index?pageIndex=@(Model.PageInformation.PageIndex + 1)&search=@Model.Search&category=@Model.Category&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">Next</a>
                    <a
                        href="~/Home/Index?pageIndex=@(Model.PageInformation.TotalPages - 1)&search=@Model.Search&category=@Model.Category&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">Last</a>
                }
            </div>
        </div>

    </div>
