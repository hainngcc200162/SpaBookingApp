@page
@model SpaBookingApp.Pages.Home.GetProvisionByIdModel
@{
    Layout = "_MyLayout";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
<section class="bg0 p-t-80 p-b-80">
    <div class="container">
        <div class="row p-b-20">

            <div class="container">
                <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">

                    <div class="row">
                        <div class="col-md-6 col-lg-7 p-b-30">
                            <div class="p-l-25 p-r-30 p-lr-0-lg">
                                <div class="wrap-slick3 flex-sb flex-w">
                                    <div class="slick3 gallery-lb">
                                        <div class="item-slick3"
                                            data-thumb="@Model.Provision.PosterName">
                                            <div class="wrap-pic-w pos-relative">
                                                <img
                                                    src="@Model.Provision.PosterName"
                                                    alt="IMG-PRODUCT">
                                                <a
                                                    class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                    href="@Model.Provision.PosterName">
                                                    <i class="fa fa-expand"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-5 p-b-30">
                            <div class="p-r-50 p-t-5 p-lr-0-lg">
                                <div class="p-r-50 p-t-5 p-lr-0-lg">
                                    <h4
                                        class="mtext-105 cl2 js-name-detail p-b-14">
                                        @Html.DisplayFor(model =>
                                        model.Provision.Name) <br>
                                    </h4>

                                    <span class="mtext-106 cl2">
                                        <p>$ @Html.DisplayFor(model
                                            =>
                                            Model.Provision.Price)</p><br>
                                    </span>

                                    <span class="mtext-106 cl2">
                                        <p>Number of Executions: @Html.DisplayFor(model
                                            =>
                                            Model.Provision.NumberOfExecutions) Times</p><br>
                                    </span>

                                    <span class="stext-102 cl3 p-t-23">
                                        <p>Status:
                                            @if (Model.Provision.Status)
                                            {
                                                <span class="active-status"> Active</span>
                                            }
                                            else
                                            {
                                                <span class="inactive-status"> Inactive</span>
                                            }
                                        </p>
                                    </span>

                                    <span class="stext-102 cl3 p-t-23">
                                        <p>Duration Minutes:
                                            @Model.Provision.DurationMinutes</p>
                                    </span>

                                    <span class="stext-102 cl3 p-t-23">
                                        <p>Description: @Html.DisplayFor(model
                                            =>
                                            model.Provision.Description)</p>
                                    </span>

                                    <span class="stext-102 cl3 p-t-23">
                                        <strong><p>Function: </p></strong>
                                        <ul class="description-list">
                                            <ul class="sub-list">
                                                <li><span class="bullet">&#9679;</span> Reduce fatigue and tiredness</li>
                                                <li><span class="bullet">&#9679;</span> Cleanse the skin, promoting skin firmness</li>
                                                <li><span class="bullet">&#9679;</span> Facilitate deeper sleep</li>
                                                <li><span class="bullet">&#9679;</span> Alleviate muscle soreness after intense physical activities</li>
                                                <li><span class="bullet">&#9679;</span> Effectively detoxify the body</li>
                                                <li><span class="bullet">&#9679;</span> Burn energy for efficient weight loss</li>
                                                <li><span class="bullet">&#9679;</span> Enhance immunity against diseases</li>
                                            </ul>
                                        </ul>
                                    </span>

                                    <br><br><br><br><br><br><br><br><br><br><br>
                                    <a href="/Bookings/CreateBooking"
                                        class="btn btn-dark btn-lg btn-block">Book Now</a>
                                    <div class="p-t-33">
                                        <div class="flex-w flex-r-m p-b-10">
                                            <div
                                                class="size-204 flex-w flex-m respon6-next">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .active-status {
        color: green; /* Màu cho trạng thái Active */
        font-weight: bold; /* In đậm */
        font-size: 18px; /* Cỡ chữ lớn hơn */
    }

    .inactive-status {
        color: red; /* Màu cho trạng thái Inactive */
        font-weight: bold; /* In đậm */
        font-size: 18px; /* Cỡ chữ lớn hơn */
    }

    /* CSS for description list */
    .description-list {
        margin-top: 10px;
        margin-bottom: 20px;
        list-style-type: none;
        padding-left: 0;
    }

    /* CSS for sub-list */
    .sub-list {
        margin-top: 10px;
        margin-bottom: 20px;
        list-style-type: disc;
        padding-left: 20px;
    }

    /* CSS for sub-list items */
    .sub-list li {
        margin-bottom: 5px;
    }

    /* CSS for bullet */
    .bullet {
        margin-right: 5px;
        font-size: 10px;
    }

</style>